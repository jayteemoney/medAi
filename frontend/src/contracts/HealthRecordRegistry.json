      "stateMutability": "view"
    },
    {
      "type": "function",
      "name": "getRecordsPaginated",
      "inputs": [
        { "name": "_patient", "type": "address" },
        { "name": "_offset", "type": "uint256" },
        { "name": "_limit", "type": "uint256" }
      ],
      "outputs": [
        {
          "name": "records",
          "type": "tuple[]",
          "components": [
            { "name": "ipfsHash", "type": "string" },
            { "name": "timestamp", "type": "uint256" },
            { "name": "patient", "type": "address" },
            { "name": "recordType", "type": "string" }
          ]
        },
        { "name": "total", "type": "uint256" }
      ],
      "stateMutability": "view"
    },
    {
      "type": "event",
      "name": "RecordAdded",
      "inputs": [
        { "name": "patient", "type": "address", "indexed": true },
        { "name": "ipfsHash", "type": "string", "indexed": true },
        { "name": "recordType", "type": "string", "indexed": false },
        { "name": "timestamp", "type": "uint256", "indexed": false },
        { "name": "recordIndex", "type": "uint256", "indexed": true }
      ]
    },
    {
      "type": "event",
      "name": "RecordAccessed",
      "inputs": [
        { "name": "patient", "type": "address", "indexed": true },
        { "name": "accessor", "type": "address", "indexed": true },
        { "name": "recordIndex", "type": "uint256", "indexed": true },
        { "name": "timestamp", "type": "uint256", "indexed": false }
      ]
    },
